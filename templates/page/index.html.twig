{% extends 'base.html.twig' %}

{% block title %}Tricks{% endblock %}

{% block body %}

<div>
	<img src="assets/img/snow-Acc.png" alt="">
</div>
<div class="container">
	{# read and display just one flash message type #}
	{% for message in app.flashes('success') %}
	<div class="alert alert-success m-3 p-3">
		{{ message }}
	</div>
	{% endfor %}
	{% for message in app.flashes('danger') %}
	<div class="alert alert-danger m-3 p-3">
		{{ message }}
	</div>
	{% endfor %}
	<div class="row col row-cols row-cols-lg-5 g-2 g-lg-3 ">

		{% for trick in tricks %}
		<div class="card my-3 p-0">
			<img src="assets/img/snow-logo.png" class="card-img-top" alt="...">
			<div class="card-body p-2 d-flex justify-content-between">
				<h5 class="card-title"><a href="{{ path('app_trick_show', {id: trick.id}) }}">{{trick.name}}</h5>a></h5>
				<div class="">
					{% if app.user %}
					<a href="{{ path('trick.edit',{name:trick.name})}}" class="text-success"><i
							class="fa-solid fa-pencil"></i></a>
					<a href="{{ path('trick.delete',{name:trick.name})}}" class="text-danger"><i
							class="fa-solid fa-trash-can"></i></a>
					{% endif %}
				</div>
			</div>
		</div>

		{% endfor %}
	</div>
</div>
{% endblock %}